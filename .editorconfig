# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Go
[*.go]
indent_style = tab
indent_size = 4

# Python
[*.py]
indent_size = 4
max_line_length = 100

# Makefiles
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

# YAML
[*.{yml,yaml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# TypeScript/JavaScript
[*.{ts,tsx,js,jsx}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_size = 2

# SQL
[*.sql]
indent_size = 2

# Rust
[*.rs]
indent_size = 4

# Protocol Buffers
[*.proto]
indent_size = 2

# Dockerfiles
[Dockerfile*]
indent_size = 4

# Terraform
[*.tf]
indent_size = 2

[*.tfvars]
indent_size = 2
